<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Example1Activity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét công cụ Android Studio"
        android:textSize="23sp"
        android:textColor="#DE23DE"

        />

    <RadioGroup
        android:id="@+id/radVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radVote1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Tương đối tốt"
            android:textSize="23sp"
            android:textStyle="bold"

            />
        <RadioButton
            android:id="@+id/radVote2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Tốt"
            android:textSize="23sp"
            android:textStyle="bold"/>
        <RadioButton
            android:id="@+id/radVote3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Rất tốt"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/radVote4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Tuyệt vời"
            android:textSize="23sp"
            android:textStyle="bold"/>
    </RadioGroup>


    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:layout_gravity="center"
        android:padding="10dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn đã đánh giá: ..."
        android:background="@color/pink"
        android:textSize="23sp"/>


</LinearLayout>