<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#4AFF86DD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imvPhotoCustom"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:src="@drawable/heineken"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/txtNameCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beer's Name"
                android:textSize="28sp"
                android:textColor="#047e72"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtPriceCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beer's Name"
                android:textSize="28sp"
                android:textColor="#EB3A6D"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btncancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#ff332c"
        android:layout_gravity="center"/>


</LinearLayout>