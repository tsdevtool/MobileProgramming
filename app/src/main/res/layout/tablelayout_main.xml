<!--            android:height="80dp"-->
<!--            android:width="80dp"-->
<!--            android:text="6"-->
<!--            android:background="@color/purple"-->
<!--            android:textSize="32sp"-->
<!--            android:textColor="@color/white"-->
<!--            android:gravity="center"-->

<!--            />-->

        <TextView
            android:height="80dp"
            android:width="80dp"
            android:text="7"
            android:background="@color/red"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_span="2"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:height="80dp"
            android:width="80dp"
            android:text="8"
            android:background="@color/purple"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:gravity="center"

            />
        <TextView
            android:height="80dp"
            android:width="80dp"
            android:text="9"
            android:background="@color/red"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:gravity="center"

            />
        <TextView
            android:height="80dp"
            android:width="80dp"
            android:text="10"
            android:background="@color/blue"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_column="3"
            />
    </TableRow>

</TableLayout>