<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="#0affcc"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACTIVITY MAIN"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnOpenActivityMain2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Activity Main #2"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        />

    <Button
        android:id="@+id/btnShowDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Dialog"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:backgroundTint="#798500"
        />

    <Button
        android:id="@+id/btnOpenActivityMain3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Activity Main #3 \n(Sending data)"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:backgroundTint="#3BAFEF"
        />
    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a number"
        android:textSize="26sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnOpenActivityMain4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Activity Main #4 \n(Sending - Receive data)"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:backgroundTint="#F44883"
        />

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="........."
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="26sp"
        android:padding="15dp"
        android:textStyle="bold"
        />

</LinearLayout>